{
  "extends": [
    "stylelint-config-recess-order",
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
        ],
      },
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null
  }
}
