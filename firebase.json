{
  "hosting": {
    "public": "packages/client/dist",
    "ignore": ["firebase.json", "**/.*"],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31104000"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "packages/firebase/firestore.rules",
    "indexes": "packages/firebase/firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "yarn --cwd packages/firebase build"
    ],
    "source": "packages/firebase"
  },
  "emulators": {
    "firestore": {
      "port": 8080
    }
  }
}
