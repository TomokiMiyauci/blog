{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "prettier",
    "prettier/vue",
    "plugin:prettier/recommended",
    "plugin:nuxt/recommended",
    "plugin:vue-a11y/base"
  ],
  "plugins": ["prettier", "vue-a11y"],
  "rules": {
    "import/order": [
      "error",
      { "alphabetize": { "order": "asc", "caseInsensitive": true }, "newlines-between": "always" }
    ],
    "vue/no-v-html": "off"
  }
}
